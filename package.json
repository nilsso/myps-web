{
    "name": "myps-web",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint"
    },
    "dependencies": {
        "core-js": "^3.6.5",
        "lodash": "^4.17.21",
        "vue": "^3.0.0"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "~4.5.0",
        "@vue/cli-plugin-eslint": "~4.5.0",
        "@vue/cli-service": "~4.5.0",
        "@vue/compiler-sfc": "^3.0.0",
        "@wasm-tool/wasm-pack-plugin": "^1.5.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^6.7.2",
        "eslint-plugin-vue": "^7.0.0"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/vue3-essential",
            "plugin:vue/vue3-recommended",
            "eslint:recommended"
        ],
        "parserOptions": {
            "parser": "babel-eslint"
        },
        "ignorePatterns": [
            "wasm/pkg/*"
        ],
        "rules": {
            "no-undef": "warn",
            "no-unused-vars": "warn",
            "no-extra-semi": "warn",
            "vue/html-indent": [
                "warn",
                4
            ],
            "vue/max-attributes-per-line": [
                "warn",
                {
                    "singleline": {
                        "max": 3,
                        "allowFirstLine": true
                    }
                }
            ]
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ]
}
